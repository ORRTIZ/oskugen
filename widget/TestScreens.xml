<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="Test">
        <section>
            <actions>
                <set field="headerItem" value="main" /><!-- this highlights 
                    the selected menu-item with name "main" -->
            </actions>
            <widgets>
                <decorator-screen name="CommonDecorator"
                    location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <screenlet title="${uiLabelMap.Entry}">
                                    <include-form name="Test"
                                        location="component://${activeApp}/widget/forms/TestForms.xml" />
                                </screenlet>
                                <screenlet title="${uiLabelMap.Result}">
                                    <container id="resultDetails" />
                                </screenlet>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="ProductResult">
        <section>
            <actions>
                <set field="productId" from-field="parameters.productId" />
                <entity-one entity-name="Product"
                    value-field="product" />
            </actions>
            <widgets>
                <decorator-screen name="CommonLayerDecorator"
                    location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <widgets>
                                <include-form
                                    location="component://${activeApp}/widget/forms/${activeApp}-Forms.xml"
                                    name="ProductResult" />
                            </widgets>
                        </section>
                        <section>
                            <condition>
                                <if-compare field="product.isVirtual"
                                    operator="equals" value="Y" />
                            </condition>
                            <widgets >
                                <include-screen name="ProductVariants"/>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="ProductVariants">
        <section>
            <actions>
                <entity-and entity-name="ProductAssoc" list="productAssocs">
                    <field-map field-name="productAssocTypeId"
                        value="PRODUCT_VARIANT" />
                    <field-map field-name="productId" value="${productId}" />
                </entity-and>
            </actions>
            <widgets>
                <screenlet title="${uiLabelMap.AssociatedProducts}">
                    <include-form
                        location="component://${activeApp}/widget/forms/${activeApp}-Forms.xml"
                        name="ProductAssocs" />
                </screenlet>
            </widgets>
        </section>
    </screen>

</screens>